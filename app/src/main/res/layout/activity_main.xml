<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg13"
    android:orientation="vertical"
    tools:context=".controllers.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nomE"
                        android:layout_width="345dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center|start"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nasalization"
                        android:text="Entreprise blablabla"
                        android:textColor="#FFB900"

                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nbUtilisateurs"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center|start"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nasalization"
                        android:text="50 Utilisateurs"
                        android:textColor="#FFB900"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/argent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nasalization"
                        android:text="3 000 000€"
                        android:textColor="#FFB900"
                        android:textSize="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/bgbutton"
                        android:fontFamily="@font/nasalization"
                        android:onClick="go_concurrents"
                        android:text="Concurrent"
                        android:textColor="#FFB900" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/bgbutton"
                        android:fontFamily="@font/nasalization"
                        android:onClick="GoToInvocation"
                        android:text="INVOQUER"
                        android:textColor="#FFB900" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/hangingterm" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nasalization"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bgbutton"
                android:fontFamily="@font/nasalization"
                android:text="AMELIORER"
                android:onClick="GoToAmeliorer"
                android:textColor="#FFB900" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bgbutton"
                android:fontFamily="@font/nasalization"
                android:text="STATS"
                android:textColor="#FFB900" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bgbutton"
                android:fontFamily="@font/nasalization"
                android:onClick="go_employes"
                android:text="Employés"
                android:textColor="#FFB900" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bgbutton"
                android:fontFamily="@font/nasalization"
                android:text="MINI-JEU"
                android:onClick="GoToChoixAttackDef"
                android:textColor="#FF22CD" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center|right"
            android:layout_weight="4"
            android:gravity="bottom|center|end">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/bgbutton"
                android:fontFamily="@font/nasalization"
                android:text="FIN TOUR"
                android:textColor="#FF22CD" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg14"
    android:orientation="vertical"

    tools:context=".controllers.Statistiques">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Statistiques"
        android:fontFamily="@font/nasalization"
        android:textColor="#FFB900"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="match_parent"
        android:background="@drawable/bgbutton"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/nasalization"
                    android:text="Parties"
                    android:textColor="#FF22CD"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nbMinijeux"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/nasalization"
                    android:text="Nombre de mini-jeux joués"
                    android:textColor="#FFB900"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/nbMinijeuxG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/nasalization"
                    android:text="Nombre de mini-jeux gagnés"
                    android:textColor="#FFB900"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pourcentvictoire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/nasalization"
                    android:text="Pourcentage de victoire"
                    android:textColor="#FFB900"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/nasalization"
                    android:text="Entreprise"
                    android:textColor="#FF22CD"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/snom_entreprise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/nasalization"
                    android:text="Nom entreprise"
                    android:textColor="#FFB900"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sargent_entreprise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/nasalization"
                    android:text="Argent entreprise"
                    android:textColor="#FFB900"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/snb_utilisateurs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/nasalization"
                    android:text="Nombre d'utilisateurs"
                    android:textColor="#FFB900"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/snombre_employes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text="Nombre d'employés"
                    android:fontFamily="@font/nasalization"
                    android:textColor="#FFB900"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/spart_marche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/nasalization"
                    android:text="Parts de marché"
                    android:textColor="#FFB900"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/nasalization"
                    android:gravity="center"
                    android:text="Rapidité totale"
                    android:textColor="#FFB900"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/raptot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/nasalization"
                    android:gravity="center"
                    android:text="42"
                    android:textColor="#FF22CD"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/nasalization"
                    android:gravity="center"
                    android:text="Productivité totale"
                    android:textColor="#FFB900"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/prodtot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/nasalization"
                    android:gravity="center"
                    android:text="35"
                    android:textColor="#FF22CD"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg13"
    android:orientation="vertical"
    tools:context=".controllers.AmeliorationsActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nasalization"
        android:gravity="center"
        android:textSize="36dp"
        android:textColor="#FFB900"
        android:text="Améliorations" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgbutton"
        android:layout_margin="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"

                android:fontFamily="@font/nasalization"
                android:text="Argent disponible :"
                android:textColor="#FFB900"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/argentdispo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/nasalization"
                android:textColor="#FF22CD"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="Optimisation Fiscale:"
                android:textColor="#FFB900"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ProgressBar
                    android:id="@+id/OfiscalBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:progress="25" />

                <TextView
                    android:id="@+id/Copti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#00000000"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"></TextView>
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_vertical"
                android:layout_weight="3"
                android:background="@drawable/bgbutton"
                android:fontFamily="@font/digitall"
                android:textAlignment="center"
                android:onClick="upOptiFisc"
                android:text="+"
                android:textColor="#FF22CD"
                android:textSize="35dp">

            </Button>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="Puissance de calcul :"
                android:textColor="#FFB900"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ProgressBar
                    android:id="@+id/puissanceBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:progress="25" />

                <TextView
                    android:id="@+id/Cpuissance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#00000000"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp">

                </TextView>
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@drawable/bgbutton"
                android:fontFamily="@font/digitall"
                android:onClick="upPuissance"
                android:textAlignment="center"
                android:text="+"
                android:textColor="#FF22CD"
                android:textSize="35dp">

            </Button>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="Ergonomie                 :"
                android:textColor="#FFB900"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ProgressBar
                    android:id="@+id/ergoBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:progress="25" />

                <TextView
                    android:id="@+id/Cergo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#00000000"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"></TextView>
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:textAlignment="center"
                android:background="@drawable/bgbutton"
                android:fontFamily="@font/digitall"
                android:onClick="upErgo"
                android:text="+"
                android:textColor="#FF22CD"
                android:textSize="35dp">

            </Button>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="Sécurité du logiciel  :"
                android:textColor="#FFB900"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ProgressBar
                    android:id="@+id/secuBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:progress="25" />

                <TextView
                    android:id="@+id/Csecu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#00000000"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"></TextView>
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@drawable/bgbutton"
                android:textAlignment="center"
                android:fontFamily="@font/digitall"
                android:onClick="upSecu"
                android:text="+"
                android:textColor="#FF22CD"
                android:textSize="35dp">

            </Button>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

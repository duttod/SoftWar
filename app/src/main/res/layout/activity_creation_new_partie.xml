<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.CreationNewPartie"
    android:background="@drawable/bg1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titre_CreationNewPartie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Débuter une nouvelle partie"
        android:textColor="#FFB900"
        android:fontFamily="@font/nasalization"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_nom_entreprise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_nom_entreprise"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Nom de l'entreprise"
                android:textColor="#FFB900"
                android:fontFamily="@font/nasalization"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edit_nom_entreprise"
                android:layout_width="491dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:textColor="#FFB900"
                android:fontFamily="@font/nasalization"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_nom_logiciel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_nom_logiciel"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Nom du logiciel"
                android:textColor="#FFB900"
                android:fontFamily="@font/nasalization"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edit_nom_logiciel"
                android:layout_width="491dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:textColor="#FFB900"
                android:fontFamily="@font/nasalization"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/valider_CreationNewPartie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:onClick="demarrerPartie"
            android:padding="0dp"
            android:src="@drawable/demarrerpartie"
            android:text="Démarrer la partie" />

    </LinearLayout>

</LinearLayout>
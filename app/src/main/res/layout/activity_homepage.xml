<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFC989"
    android:orientation="horizontal"
    tools:context=".controllers.HomePageActivity">

    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:background="#DFC989"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="307dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFC989"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SOFT'WAR"
            android:layout_marginBottom="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/button"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nouvelle Partie"
            android:onClick="Nouvelle_Partie"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:text="Charger Partie"
            android:onClick="ChargerPartie"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:text="CrÃ©dit"
            android:onClick="afficherCredit"/>

    </LinearLayout>

</LinearLayout>
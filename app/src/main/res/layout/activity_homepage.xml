<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg1"
    tools:context=".controllers.HomePageActivity"
    >

    <LinearLayout

        android:layout_width="306dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:fontFamily="@font/digitall"
            android:text="SOFT'WAR"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="45sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bgbutton"
            android:fontFamily="@font/nasalization"
            android:onClick="Nouvelle_Partie"
            android:textSize="30dp"
            android:text="Nouvelle Partie"
            android:textColor="#FFB900" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bgbutton"
            android:textSize="30dp"
            android:fontFamily="@font/nasalization"
            android:onClick="ChargerPartie"
            android:text="Charger Partie"
            android:textColor="#FFB900" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:background="@drawable/bgbutton"
            android:fontFamily="@font/nasalization"
            android:onClick="afficherCredit"
            android:text="CrÃ©dit"
            android:textColor="#FFB900" />

    </LinearLayout>

</LinearLayout>
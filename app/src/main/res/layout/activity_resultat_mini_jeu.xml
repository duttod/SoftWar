<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg12"
    tools:context=".controllers.ResultatMiniJeu">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:fontFamily="@font/nasalization"
        android:gravity="center"
        android:text="Resultats"
        android:textColor="#FFB900"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/resultats_mini_jeu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:fontFamily="@font/nasalization"
        android:gravity="center"
        android:text="VOUS avez perdus vous êtes vraiment très nul super ggcpzerzaerzaeUIHJKHJ"
        android:textColor="#FFB900"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/bgbutton"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nasalization"
            android:gravity="center"
            android:text="Récompenses"
            android:textColor="#FF22CD"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/argent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFB900"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/nbusers"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFB900"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ergonomie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFB900"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/securite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFB900"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/puissance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFB900"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rentabilite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFB900"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:fontFamily="@font/nasalization"
        android:text="Revenir au menu"
        android:textColor="#FFB900"
        android:onClick="go_menu"
        android:background="@drawable/bgbutton"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout_popup"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg12"
    tools:context=".controllers.TirageAuSortActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="MissingDefaultResource"
        android:background="@drawable/bgbutton"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            tools:srcCompat="@tools:sample/avatars" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom"
                        android:textColor="#FFB900"
                        android:fontFamily="@font/nasalization"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prénom"
                        android:textColor="#FFB900"
                        android:fontFamily="@font/nasalization"
                        android:textSize="20dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textColor="#FFB900"
                        android:fontFamily="@font/nasalization"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textColor="#FFB900"
                        android:fontFamily="@font/nasalization"
                        android:textSize="20dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nom_employe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#FF22CD"
                        android:fontFamily="@font/nasalization"
                        android:text="Gérot"/>
                    <TextView
                        android:id="@+id/prenom_employe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#FF22CD"
                        android:fontFamily="@font/nasalization"
                        android:text="Cédric"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#FFB900"
                android:fontFamily="@font/nasalization"
                android:text="Rareté : "
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/rarete_employe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#FF22CD"
                android:fontFamily="@font/nasalization"
                android:text="3"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age : "
                        android:textColor="#FFB900"
                        android:fontFamily="@font/nasalization"
                        android:textSize="17dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Productivité : "
                        android:textColor="#FFB900"
                        android:fontFamily="@font/nasalization"
                        android:textSize="17dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rapidité : "
                        android:textColor="#FFB900"
                        android:fontFamily="@font/nasalization"
                        android:textSize="17dp"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/age_employe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF22CD"
                        android:fontFamily="@font/nasalization"
                        android:text="44"
                        android:textSize="17dp"/>
                    <TextView
                        android:id="@+id/productivite_employe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF22CD"
                        android:fontFamily="@font/nasalization"
                        android:text="19"
                        android:textSize="17dp"/>
                    <TextView
                        android:id="@+id/rapidite_employe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF22CD"
                        android:fontFamily="@font/nasalization"
                        android:text="17"
                        android:textSize="17dp"/>



                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bgbutton"
        android:fontFamily="@font/nasalization"
        android:text="Valider"
        android:onClick="fermerbox"
        android:textColor="#FFB900"
        android:textSize="25dp"/>


</LinearLayout>